version: "3.7"

services:
    app_backend:
        build:
            context: ./backend
            
    app_frontend:
        build:
            context: ./frontend
            dockerfile: Dockerfile.production
        volumes:
            - .:/app
            - /app/node_modules
        ports:
            - 3000:3000
        environment:
            - CHOKIDAR_USEPOLLING=true
        command: npm start

    environment:
        - COMPOSE_CONVERT_WINDOWS_PATHS=1